<Page x:Class="TreeMethod.Views.MatricesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="MatricesPage">

    <Grid Background="#FFF" Width="1920" Height="1000">
        <DockPanel>
            <TextBlock Text="Редактирование матриц"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="20"
                       DockPanel.Dock="Top" />

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20" Orientation="Vertical" VerticalAlignment="Top">

                    <!-- Панель управления -->
                    <StackPanel Orientation="Horizontal" Margin="10,0,0,10">
                        <TextBlock Text="Количество признаков (P):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="PCountBox" Text="3" Width="60" Margin="0,0,20,0"/>

                        <TextBlock Text="Количество целей (A):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox x:Name="ACountBox" Text="2" Width="60" Margin="0,0,12,0"/>

                        <Button Content="Применить" Click="ApplySizes_Click" Width="100"/>
                    </StackPanel>

                    <!-- Матрица E×P -->
                    <TextBlock Text="Матрица соответствий E×P (элементы × признаки)"
                               FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="EPGrid"
          AutoGenerateColumns="False"
          CellEditEnding="EPGrid_CellEditEnding"
          Margin="0,5,0,10" />


                    <!-- Матрица A×P -->
                    <TextBlock Text="Матрица целей A×P (цели × признаки)"
                               FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                    <DataGrid x:Name="APGrid"
          AutoGenerateColumns="False"
          CellEditEnding="APGrid_CellEditEnding"
          Margin="0,5,0,10" />


                    <!-- Кнопка сохранения -->
                    <Button Content="💾 Сохранить изменения"
                            Width="250"
                            Height="40"
                            Click="SaveMatrices_Click"/>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Page>
