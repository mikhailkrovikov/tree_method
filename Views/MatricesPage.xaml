<Page x:Class="TreeMethod.Views.MatricesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="MatricesPage"
      Background="{StaticResource BackgroundLight}">

    <Grid HorizontalAlignment="Stretch" 
          VerticalAlignment="Stretch">
        <DockPanel>
            <!-- Заголовок -->
            <Border DockPanel.Dock="Top"
                    Background="{StaticResource BackgroundWhite}"
                    BorderBrush="{StaticResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    Padding="24,16">
                <TextBlock Text="Редактирование матриц"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"/>
            </Border>

            <ScrollViewer x:Name="MainScrollViewer"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          Padding="24">
                <StackPanel Orientation="Vertical">

                    <!-- Панель управления -->
                    <Border Background="{StaticResource BackgroundWhite}"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Количество признаков (P):" 
                                      VerticalAlignment="Center" 
                                      Foreground="{StaticResource TextPrimary}"
                                      FontSize="13"
                                      Margin="0,0,8,0"/>
                            <TextBox x:Name="PCountBox" 
                                    Text="{Binding FeaturesCount, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ModernTextBox}"
                                    Width="70" 
                                    Margin="0,0,24,0"/>

                            <TextBlock Text="Количество целей (A):" 
                                      VerticalAlignment="Center" 
                                      Foreground="{StaticResource TextPrimary}"
                                      FontSize="13"
                                      Margin="0,0,8,0"/>
                            <TextBox x:Name="ACountBox" 
                                    Text="{Binding GoalsCount, UpdateSourceTrigger=PropertyChanged}" 
                                    Style="{StaticResource ModernTextBox}"
                                    Width="70" 
                                    Margin="0,0,16,0"/>

                            <Button Content="Применить" 
                                   Command="{Binding ApplySizesCommand}" 
                                   Style="{StaticResource ModernButton}"
                                   Padding="16,8"
                                   MinWidth="100"/>
                        </StackPanel>
                    </Border>

                    <!-- Матрица E×P -->
                    <TextBlock Text="Матрица соответствий E×P (элементы × признаки)"
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,12"/>
                    <Border BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="{StaticResource BackgroundWhite}"
                            Margin="0,0,0,24">
                        <DataGrid x:Name="EPGrid"
                                  AutoGenerateColumns="False"
                                  ItemsSource="{Binding EPRows}"
                                  CellEditEnding="EPGrid_CellEditEnding"
                                  PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                                  HeadersVisibility="Column"
                                  BorderThickness="0"
                                  GridLinesVisibility="All"
                                  Background="{StaticResource BackgroundWhite}"
                                  RowBackground="{StaticResource BackgroundWhite}"
                                  AlternatingRowBackground="{StaticResource BackgroundLight}"
                                  RowHeight="35"
                                  FontSize="14"/>
                    </Border>

                    <!-- Матрица A×P -->
                    <TextBlock Text="Матрица целей A×P (цели × признаки)"
                               FontWeight="SemiBold" 
                               FontSize="16" 
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,12"/>
                    <Border BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Background="{StaticResource BackgroundWhite}"
                            Margin="0,0,0,24">
                        <DataGrid x:Name="APGrid"
                                  AutoGenerateColumns="False"
                                  ItemsSource="{Binding APRows}"
                                  CellEditEnding="APGrid_CellEditEnding"
                                  PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                                  HeadersVisibility="All"
                                  BorderThickness="0"
                                  GridLinesVisibility="All"
                                  Background="{StaticResource BackgroundWhite}"
                                  RowBackground="{StaticResource BackgroundWhite}"
                                  AlternatingRowBackground="{StaticResource BackgroundLight}"
                                  RowHeight="35"
                                  FontSize="14"
                                  LoadingRow="APGrid_LoadingRow"/>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </DockPanel>
    </Grid>
</Page>
