<Page x:Class="TreeMethod.Views.ResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="ResultsPage">

    <Grid Background="#FFF">
        <DockPanel>
            <TextBlock Text="Результаты расчёта"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="20"
                       DockPanel.Dock="Top" />

            <StackPanel Margin="20" Orientation="Vertical">
                <TextBlock Text="Список найденных технических решений"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>

                <DataGrid Name="ResultsGrid"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False"
                          Margin="0,0,0,15"
                          Height="300" />

                <TextBlock Text="Оптимальный вариант:"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Margin="0,10,0,5"/>
                <TextBox Name="BestSolutionBox"
                         Height="35"
                         FontSize="14"
                         IsReadOnly="True"
                         Background="#FAFAFA" />

                <Button Content="🔄 Обновить результаты"
                        Width="220"
                        Height="35"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Left" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
