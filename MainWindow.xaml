<Window x:Class="TreeMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeMethod.Helpers"
        mc:Ignorable="d"
        Title="И-ИЛИ Дерево"
        MinHeight="600" MinWidth="1024"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="{StaticResource BackgroundLight}">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <DockPanel Background="{StaticResource BackgroundWhite}">
        <!-- Панель инструментов -->
        <Border DockPanel.Dock="Top" 
                Background="{StaticResource BackgroundWhite}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,0,1"
                Padding="10,8">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Новый проект" 
                        Command="{Binding NewProjectCommand}" 
                        Style="{StaticResource ToolBarButton}"
                        Margin="0,0,8,0" />
                <Button Content="📂 Открыть" 
                        Command="{Binding OpenCommand}" 
                        Style="{StaticResource ToolBarButton}"
                        Margin="0,0,8,0" />
                <Button Content="💾 Сохранить" 
                        Command="{Binding SaveCommand}" 
                        Style="{StaticResource ToolBarButton}" />
            </StackPanel>
        </Border>

        <!-- Основной контент: TabControl + Панель расчёта -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="600" />
                <ColumnDefinition Width="380" MinWidth="320" MaxWidth="450" />
            </Grid.ColumnDefinitions>

            <!-- Вкладки: Граф и Матрицы -->
            <TabControl Grid.Column="0" 
                       x:Name="MainTabControl"
                       Style="{StaticResource ModernTabControl}">
                <TabItem Header="Граф" Style="{StaticResource ModernTabItem}">
                    <Frame x:Name="TreeFrame"
                           NavigationUIVisibility="Hidden"
                           Content="{Binding TreePage}"
                           JournalOwnership="OwnsJournal"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </TabItem>
                <TabItem Header="Матрицы" Style="{StaticResource ModernTabItem}">
                    <Frame x:Name="MatricesFrame"
                           NavigationUIVisibility="Hidden"
                           Content="{Binding MatricesPage}"
                           JournalOwnership="OwnsJournal"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                </TabItem>
            </TabControl>

            <!-- Боковая панель: Расчёт и Результаты -->
            <Border Grid.Column="1" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1,0,0,0"
                    Background="{StaticResource BackgroundLight}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="20" Orientation="Vertical">
                        <!-- Заголовок -->
                        <TextBlock Text="Расчёт и результаты"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,20" />

                        <!-- Блок расчёта -->
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource BorderColor}"
                                CornerRadius="8"
                                Padding="16"
                                Background="{StaticResource BackgroundWhite}"
                                Margin="0,0,0,20">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Выполнить расчёт"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Запускает алгоритмы №1 и №2"
                                           FontSize="12"
                                           Foreground="{StaticResource TextSecondary}"
                                           Margin="0,0,0,12"/>
                                <Button Content="▶ Запустить расчёт"
                                        Command="{Binding RunCalculationCommand}"
                                        Style="{StaticResource ModernButton}"
                                        Height="42"
                                        HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </Border>

                        <!-- Блок результатов -->
                        <Border BorderThickness="1"
                                BorderBrush="{StaticResource BorderColor}"
                                CornerRadius="8"
                                Padding="16"
                                Background="{StaticResource BackgroundWhite}">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Результаты"
                                           FontSize="15"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,12"/>

                                <!-- Теоретическое множество -->
                                <TextBlock Text="|RT| ="
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="RTResultBox"
                                         Text="{Binding RTResult}"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         Background="{StaticResource BackgroundLight}"
                                         Margin="0,0,0,16"/>

                                <!-- Рациональные решения -->
                                <TextBlock Text="Рациональные решения:"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="RationalSolutionsBox"
                                         Text="{Binding RationalSolutions}"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         Background="{StaticResource BackgroundLight}"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         MinHeight="300"
                                         MaxHeight="500"
                                         Margin="0,0,0,16"/>

                                <!-- Оптимальный вариант -->
                                <TextBlock Text="Оптимальный вариант:"
                                           FontSize="13"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource TextPrimary}"
                                           Margin="0,0,0,6"/>
                                <TextBox x:Name="BestSolutionBox"
                                         Text="{Binding BestSolution}"
                                         IsReadOnly="True"
                                         Style="{StaticResource ModernTextBox}"
                                         Background="{StaticResource BackgroundLight}"
                                         Margin="0,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </DockPanel>
</Window>
