<Window x:Class="TreeMethod.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TreeMethod.Helpers"
        mc:Ignorable="d"
        Title="И-ИЛИ Дерево"
        Height="1080" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        ResizeMode="NoResize">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <DockPanel>
        <!-- Панель инструментов -->
        <ToolBar DockPanel.Dock="Top" Padding="4">
            <Button Content="➕ Новый" Command="{Binding NewProjectCommand}" Margin="2" />
            <Button Content="📂 Открыть" Command="{Binding OpenCommand}" Margin="2" />
            <Button Content="💾 Сохранить" Command="{Binding SaveCommand}" Margin="2" />
        </ToolBar>

        <!-- Основной контент: TabControl + Панель расчёта -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="350" />
            </Grid.ColumnDefinitions>

            <!-- Вкладки: Граф и Матрицы -->
            <TabControl Grid.Column="0" x:Name="MainTabControl">
                <TabItem Header="Граф">
                    <Frame x:Name="TreeFrame"
                           NavigationUIVisibility="Hidden"
                           Content="{Binding TreePage}"
                           JournalOwnership="OwnsJournal" />
                </TabItem>
                <TabItem Header="Матрицы">
                    <Frame x:Name="MatricesFrame"
                           NavigationUIVisibility="Hidden"
                           Content="{Binding MatricesPage}"
                           JournalOwnership="OwnsJournal" />
                </TabItem>
            </TabControl>

            <!-- Боковая панель: Расчёт и Результаты -->
            <Border Grid.Column="1" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1,0,0,0"
                    Background="#F5F5F5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15" Orientation="Vertical">
                        <!-- Заголовок -->
                        <TextBlock Text="Расчёт и результаты"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Margin="0,0,0,15" />

                        <!-- Блок расчёта -->
                        <Border BorderThickness="1"
                                BorderBrush="#CCCCCC"
                                CornerRadius="4"
                                Padding="12"
                                Background="White"
                                Margin="0,0,0,15">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Выполнить расчёт"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"/>
                                <TextBlock Text="Запускает алгоритмы №1 и №2"
                                           FontSize="11"
                                           Foreground="Gray"
                                           Margin="0,0,0,10"/>
                                <Button Content="▶ Запустить расчёт"
                                        Command="{Binding RunCalculationCommand}"
                                        Height="40"
                                        FontSize="13"
                                        HorizontalAlignment="Stretch" />
                            </StackPanel>
                        </Border>

                        <!-- Блок результатов -->
                        <Border BorderThickness="1"
                                BorderBrush="#CCCCCC"
                                CornerRadius="4"
                                Padding="12"
                                Background="White">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Результаты"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,10"/>

                                <!-- Теоретическое множество -->
                                <TextBlock Text="|RT| ="
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="RTResultBox"
                                         Text="{Binding RTResult}"
                                         IsReadOnly="True"
                                         Background="#FAFAFA"
                                         Padding="5"
                                         Margin="0,0,0,15"
                                         BorderThickness="1"
                                         BorderBrush="#DDDDDD"/>

                                <!-- Рациональные решения -->
                                <TextBlock Text="Рациональные решения:"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,5"/>
                                <TextBox x:Name="RationalSolutionsBox"
                                         Text="{Binding RationalSolutions}"
                                         IsReadOnly="True"
                                         Background="#FAFAFA"
                                         Padding="5"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Height="200"
                                         BorderThickness="1"
                                         BorderBrush="#DDDDDD"/>

                                <!-- Оптимальный вариант -->
                                <TextBlock Text="Оптимальный вариант:"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Margin="0,15,0,5"/>
                                <TextBox x:Name="BestSolutionBox"
                                         Text="{Binding BestSolution}"
                                         IsReadOnly="True"
                                         Background="#FAFAFA"
                                         Padding="5"
                                         Margin="0,0,0,0"
                                         BorderThickness="1"
                                         BorderBrush="#DDDDDD"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Строка состояния -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusText}" VerticalAlignment="Center" />
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <ProgressBar Width="150"
                     Height="16"
                     IsIndeterminate="True"
                     Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
